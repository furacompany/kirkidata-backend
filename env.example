# ========================================
# KirkiData Backend Environment Variables
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGO_URI=mongodb://localhost:27017/kirkidata


# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-64-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-minimum-64-characters-long

# JWT Token Expiration Times
JWT_ACCESS_TOKEN_EXPIRY=1d
JWT_ADMIN_ACCESS_TOKEN_EXPIRY=30m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ADMIN_REFRESH_TOKEN_EXPIRY=1d


# Password Security
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=12
BCRYPT_ROUNDS=12

# Account PIN Security
PIN_LENGTH=4
PIN_BCRYPT_ROUNDS=10

# ========================================
# EMAIL CONFIGURATION
# ========================================
# # SMTP (Zoho Mail) this is a test mail.
EMAIL_HOST=
EMAIL_PORT=
EMAIL_SECURE

EMAIL_USER=
EMAIL_PASS=

# ========================================
# BILLSTACK API CONFIGURATION
# ========================================
BILLSTACK_BASE_URL=https://api.billstack.co/v2
BILLSTACK_SECRET_KEY=
BILLSTACK_PUBLIC_KEY=
# Note: Webhook signature verification uses BILLSTACK_SECRET_KEY directly

# ========================================
# OTOBILL API CONFIGURATION
# ========================================
OTObill_BASE_URL=https://api.otobill.com/api/v1/developer
OTObill_API_KEY=
# Note: Your API key is tied to your IP address. Make sure your IP is whitelisted in your account settings.

